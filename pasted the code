          <div class="swatch" style="background:#111827;color:#F9FAFB">#111827</div>
          <div class="swatch" style="background:#6366F1;color:#fff">#6366F1</div>
          <div class="swatch" style="background:#22D3EE;color:#003">#22D3EE</div>
