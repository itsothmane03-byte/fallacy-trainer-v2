  <!-- ========== Style Guide ========== -->
  <section id="style" class="wrap">
    <div class="section-head">
      <h2>Style guide</h2>
      <span class="muted">Tokens in use</span>
    </div>
    <div class="grid grid-3">
      <div>
        <h4>Typography</h4>
        <p style="font-family:'Playfair Display',serif;font-size:28px;margin:0">Playfair Display</p>
        <p class="muted" style="margin-top:6px">Headlines</p>
        <p style="font-family:Inter,sans-serif;font-weight:600;margin:10px 0 0">Inter</p>
        <p class="muted">UI &amp; body</p>
      </div>
